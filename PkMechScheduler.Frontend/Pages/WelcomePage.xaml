<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PkMechScheduler.Frontend.Pages.WelcomePage"
             BackgroundColor="Transparent">
    <VerticalStackLayout>
        <HorizontalStackLayout Margin="10, 10, 10, 10">
            <Picker VerticalOptions="End" x:Name="Picker">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>PL</x:String>
                        <x:String>EN</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>
        </HorizontalStackLayout>
        <Label Text="Witamy" VerticalOptions="Center" FontSize="40" HorizontalOptions="Center" />
        <Label Text="Tutaj można wybrać domyślną konfigurację uruchomieniową aplikacji" HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>