<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PkMechScheduler.Frontend.Pages.SchedulePage">
    <ContentPage.Content>
        <ScrollView>
            <VerticalStackLayout>
                <HorizontalStackLayout>
                    <VerticalStackLayout>
                        <!--<Label Text="Nieparzysty"/>
                        <Switch IsToggled="True" Toggled="UpdateSchedule" x:Name="WeekSwitch"/>
                        <Label Text="Parzysty"/>-->
                        <RadioButton Content="Parzysty" x:Name="EvenWeekRadio" IsChecked="True" CheckedChanged="UpdateSchedule"/>
                        <RadioButton Content="Nieparzysty" CheckedChanged="UpdateSchedule"/>
                    </VerticalStackLayout>
                    <VerticalStackLayout>
                        <HorizontalStackLayout x:Name="LectureLayout">
                            <CheckBox x:Name="LectureCheckbox" IsChecked="True" CheckedChanged="UpdateSchedule"/>
                            <Label Text="Wykłady" VerticalTextAlignment="Center"/>
                        </HorizontalStackLayout>
                        <HorizontalStackLayout x:Name="ExerciseLayout">
                            <CheckBox x:Name="ExerciseCheckbox" IsChecked="True" CheckedChanged="UpdateSchedule"/>
                            <Label Text="Ćwiczenia" VerticalTextAlignment="Center"/>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                    <VerticalStackLayout>
                        <HorizontalStackLayout x:Name="LaboratoryLayout">
                            <CheckBox x:Name="LaboratoryCheckbox" IsChecked="True" CheckedChanged="UpdateSchedule"/>
                            <Label Text="Laboratoria" VerticalTextAlignment="Center"/>
                        </HorizontalStackLayout>
                        <HorizontalStackLayout x:Name="ComputersLaboratoryLayout">
                            <CheckBox x:Name="ComputersLaboratoryCheckbox" IsChecked="True" CheckedChanged="UpdateSchedule"/>
                            <Label Text="L. komputerowe" VerticalTextAlignment="Center"/>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                    <VerticalStackLayout>
                        <HorizontalStackLayout x:Name="ProjectsLayout">
                            <CheckBox x:Name="ProjectCheckbox" IsChecked="True" CheckedChanged="UpdateSchedule"/>
                            <Label Text="Projekty" VerticalTextAlignment="Center"/>
                        </HorizontalStackLayout>
                        <HorizontalStackLayout x:Name="SeminarsLayout">
                            <CheckBox x:Name="SeminarsCheckbox" IsChecked="True" CheckedChanged="UpdateSchedule"/>
                            <Label Text="Seminaria" VerticalTextAlignment="Center"/>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                    <VerticalStackLayout>
                        <HorizontalStackLayout x:Name="EnglishLayout">
                            <CheckBox x:Name="EnglishCheckbox" IsChecked="True" CheckedChanged="UpdateSchedule"/>
                            <Label Text="Angielski" VerticalTextAlignment="Center"/>
                        </HorizontalStackLayout>
                        <HorizontalStackLayout x:Name="WfLayout">
                            <CheckBox x:Name="WfCheckbox" IsChecked="True" CheckedChanged="UpdateSchedule"/>
                            <Label Text="WF" VerticalTextAlignment="Center"/>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </HorizontalStackLayout>
                <Grid x:Name="ScheduleGrid">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition x:Name="Number" Width="30"/>
                        <ColumnDefinition x:Name="Hour" Width="100"/>
                        <ColumnDefinition x:Name="Monday"/>
                        <ColumnDefinition x:Name="Tuesday"/>
                        <ColumnDefinition x:Name="Wednesday"/>
                        <ColumnDefinition x:Name="Thursday"/>
                        <ColumnDefinition x:Name="Friday"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition x:Name="Header"/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Frame>
                        <Label Text="Nr" HorizontalTextAlignment="Center"/>
                    </Frame>
                    <Frame Grid.Column="1" Grid.Row="0">
                        <Label Text="Godz" HorizontalTextAlignment="Center"/>
                    </Frame>
                    <Frame Grid.Column="2" Grid.Row="0">
                        <Label Text="Poniedziałek" HorizontalTextAlignment="Center"/>
                    </Frame>
                    <Frame Grid.Column="3" Grid.Row="0">
                        <Label Text="Wtorek" HorizontalTextAlignment="Center"/>
                    </Frame>
                    <Frame Grid.Column="4" Grid.Row="0">
                        <Label Text="Środa" HorizontalTextAlignment="Center"/>
                    </Frame>
                    <Frame Grid.Column="5" Grid.Row="0">
                        <Label Text="Czwartek" HorizontalTextAlignment="Center"/>
                    </Frame>
                    <Frame Grid.Column="6" Grid.Row="0">
                        <Label Text="Piątek" HorizontalTextAlignment="Center"/>
                    </Frame>
                    <Frame Grid.Column="0" Grid.Row="1">
                        <Label Text="1" HorizontalTextAlignment="Center"/>
                    </Frame>
                    <Frame Grid.Column="0" Grid.Row="2">
                        <Label Text="2" HorizontalTextAlignment="Center"/>
                    </Frame>
                    <Frame Grid.Column="0" Grid.Row="3">
                        <Label Text="3" HorizontalTextAlignment="Center"/>
                    </Frame>
                    <Frame Grid.Column="0" Grid.Row="4">
                        <Label Text="4" HorizontalTextAlignment="Center"/>
                    </Frame>
                    <Frame Grid.Column="0" Grid.Row="5">
                        <Label Text="5" HorizontalTextAlignment="Center"/>
                    </Frame>
                    <Frame Grid.Column="0" Grid.Row="6">
                        <Label Text="6" HorizontalTextAlignment="Center"/>
                    </Frame>
                    <Frame Grid.Column="0" Grid.Row="7">
                        <Label Text="7" HorizontalTextAlignment="Center"/>
                    </Frame>
                    <Frame Grid.Column="0" Grid.Row="8">
                        <Label Text="8" HorizontalTextAlignment="Center"/>
                    </Frame>
                    <Frame Grid.Column="0" Grid.Row="9">
                        <Label Text="9" HorizontalTextAlignment="Center"/>
                    </Frame>
                    <Frame Grid.Column="0" Grid.Row="10">
                        <Label Text="10" HorizontalTextAlignment="Center"/>
                    </Frame>
                    <Frame Grid.Column="0" Grid.Row="11">
                        <Label Text="11" HorizontalTextAlignment="Center"/>
                    </Frame>
                    <Frame Grid.Column="0" Grid.Row="12">
                        <Label Text="12" HorizontalTextAlignment="Center"/>
                    </Frame>
                    <Frame Grid.Column="0" Grid.Row="13">
                        <Label Text="13" HorizontalTextAlignment="Center"/>
                    </Frame>
                    <Frame Grid.Column="0" Grid.Row="14">
                        <Label Text="14" HorizontalTextAlignment="Center"/>
                    </Frame>
                    <Frame Grid.Column="0" Grid.Row="15">
                        <Label Text="15" HorizontalTextAlignment="Center"/>
                    </Frame>
                    <Frame Grid.Column="0" Grid.Row="16">
                        <Label Text="16" HorizontalTextAlignment="Center"/>
                    </Frame>
                    <Frame Grid.Column="1" Grid.Row="1">
                        <Label Text="7:30-8:15" HorizontalTextAlignment="Center"/>
                    </Frame>
                    <Frame Grid.Column="1" Grid.Row="2">
                        <Label Text="8:15-9:00" HorizontalTextAlignment="Center"/>
                    </Frame>
                    <Frame Grid.Column="1" Grid.Row="3">
                        <Label Text="9:15-10:00" HorizontalTextAlignment="Center"/>
                    </Frame>
                    <Frame Grid.Column="1" Grid.Row="4">
                        <Label Text="10:00-10:45" HorizontalTextAlignment="Center"/>
                    </Frame>
                    <Frame Grid.Column="1" Grid.Row="5">
                        <Label Text="11:00-11:45" HorizontalTextAlignment="Center"/>
                    </Frame>
                    <Frame Grid.Column="1" Grid.Row="6">
                        <Label Text="11:45-12:30" HorizontalTextAlignment="Center"/>
                    </Frame>
                    <Frame Grid.Column="1" Grid.Row="7">
                        <Label Text="12:45-13:30" HorizontalTextAlignment="Center"/>
                    </Frame>
                    <Frame Grid.Column="1" Grid.Row="8">
                        <Label Text="13:30-14:15" HorizontalTextAlignment="Center"/>
                    </Frame>
                    <Frame Grid.Column="1" Grid.Row="9">
                        <Label Text="14:30-15:15" HorizontalTextAlignment="Center"/>
