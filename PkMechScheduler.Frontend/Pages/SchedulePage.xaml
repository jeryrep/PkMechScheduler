                    </Frame>
                    <Frame Grid.Column="1" Grid.Row="16">
                        <Label Text="20:30-21:15" HorizontalTextAlignment="Center"/>
                    </Frame>
                    <Rectangle Grid.Column="2" Grid.Row="2" Grid.ColumnSpan="5"/>
                    <Rectangle Grid.Column="2" Grid.Row="4" Grid.ColumnSpan="5"/>
                    <Rectangle Grid.Column="2" Grid.Row="6" Grid.ColumnSpan="5"/>
                    <Rectangle Grid.Column="2" Grid.Row="8" Grid.ColumnSpan="5"/>
                    <Rectangle Grid.Column="2" Grid.Row="10" Grid.ColumnSpan="5"/>
                    <Rectangle Grid.Column="2" Grid.Row="12" Grid.ColumnSpan="5"/>
                    <Rectangle Grid.Column="2" Grid.Row="14" Grid.ColumnSpan="5"/>
                    <Rectangle Grid.Column="2" Grid.Row="16" Grid.ColumnSpan="5"/>
                </Grid>
            </VerticalStackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>