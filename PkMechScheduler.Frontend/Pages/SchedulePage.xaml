<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="PkMechScheduler.Frontend.Pages.SchedulePage">
    <ContentPage.Resources>
        <Style x:Key="InvalidEntryStyle" TargetType="Entry">
            <Setter Property="TextColor" Value="Red" />
        </Style>
        <Style x:Key="ValidEntryStyle" TargetType="Entry">
            <Setter Property="TextColor" Value="Green" />
        </Style>
    </ContentPage.Resources>
    <ContentPage.Content>
        <ScrollView>
            <VerticalStackLayout>
                <HorizontalStackLayout>
                    <Label Text="Grupa: " HorizontalOptions="Start" VerticalTextAlignment="Center"/>
                    <Picker x:Name="GroupsPicker" SelectedIndex="0" HorizontalOptions="Start"/>
                </HorizontalStackLayout>
                <HorizontalStackLayout>
                    <Label Text="Grupa laboratoryjna: " HorizontalOptions="Start" VerticalTextAlignment="Center"/>
                    <Entry x:Name="LaboratoryGroupNumber" Text="1" WidthRequest="50" HorizontalOptions="Start">
                        <Entry.Behaviors>
                            <toolkit:NumericValidationBehavior 
                                InvalidStyle="{StaticResource InvalidEntryStyle}"
                                ValidStyle="{StaticResource ValidEntryStyle}"
                                Flags="ValidateOnValueChanged"
                                MinimumValue="1"
                                MaximumValue="9"
                                MaximumDecimalPlaces="0"/>
                        </Entry.Behaviors>
                    </Entry>
                </HorizontalStackLayout>
                <HorizontalStackLayout>
                    <Label Text="Grupa komputerowa: " HorizontalOptions="Start" VerticalTextAlignment="Center"/>
                    <Entry x:Name="ComputersLabGroupNumber" Text="1" WidthRequest="50" HorizontalOptions="Start">
                        <Entry.Behaviors>
                            <toolkit:NumericValidationBehavior 
                                InvalidStyle="{StaticResource InvalidEntryStyle}"
                                ValidStyle="{StaticResource ValidEntryStyle}"
                                Flags="ValidateOnValueChanged"
                                MinimumValue="1"
                                MaximumValue="9"
                                MaximumDecimalPlaces="0"/>
                        </Entry.Behaviors>
                    </Entry>
                </HorizontalStackLayout>
                <HorizontalStackLayout>
                    <Label Text="Grupa projektowa: " HorizontalOptions="Start" VerticalTextAlignment="Center"/>
                    <Entry x:Name="ProjectGroup" Text="1" WidthRequest="50" HorizontalOptions="Start">
                        <Entry.Behaviors>
                            <toolkit:NumericValidationBehavior 
                                InvalidStyle="{StaticResource InvalidEntryStyle}"
                                ValidStyle="{StaticResource ValidEntryStyle}"
                                Flags="ValidateOnValueChanged"
                                MinimumValue="1"
                                MaximumValue="9"
                                MaximumDecimalPlaces="0"/>
                        </Entry.Behaviors>
                    </Entry>
                </HorizontalStackLayout>
                <HorizontalStackLayout>
                    <Label Text="Grupa ćwiczeniowa: " HorizontalOptions="Start" VerticalTextAlignment="Center"/>
                    <Entry x:Name="ExerciseGroup" Text="1" WidthRequest="50" HorizontalOptions="Start">
                        <Entry.Behaviors>
                            <toolkit:NumericValidationBehavior 
                                InvalidStyle="{StaticResource InvalidEntryStyle}"
                                ValidStyle="{StaticResource ValidEntryStyle}"
                                Flags="ValidateOnValueChanged"
                                MinimumValue="1"
                                MaximumValue="9"
                                MaximumDecimalPlaces="0"/>
                        </Entry.Behaviors>
                    </Entry>
                </HorizontalStackLayout>
                <HorizontalStackLayout>
                    <Label Text="Grupa seminaryjna: " HorizontalOptions="Start" VerticalTextAlignment="Center"/>
                    <Entry x:Name="SeminaryGroup" Text="1" WidthRequest="50" HorizontalOptions="Start">
                        <Entry.Behaviors>
                            <toolkit:NumericValidationBehavior 
                                InvalidStyle="{StaticResource InvalidEntryStyle}"
                                ValidStyle="{StaticResource ValidEntryStyle}"
                                Flags="ValidateOnValueChanged"
                                MinimumValue="1"
                                MaximumValue="9"
                                MaximumDecimalPlaces="0"/>
                        </Entry.Behaviors>
                    </Entry>
                </HorizontalStackLayout>
                <HorizontalStackLayout>
                    <Label Text="Tydzień: " HorizontalOptions="Start" VerticalTextAlignment="Center"/>
                    <Picker x:Name="WeekPicker" SelectedIndex="0">
                        <Picker.ItemsSource>
                            <x:Array Type="{x:Type x:String}">
                                <x:String>Nieparzysty</x:String>
                                <x:String>Parzysty</x:String>
                            </x:Array>
                        </Picker.ItemsSource>
                    </Picker>
                </HorizontalStackLayout>
                <Button Text="Wyświetl" Clicked="GenerateSchedule" HorizontalOptions="Center"/>
                <Grid x:Name="ScheduleGrid">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition x:Name="Number" Width="30"/>
                        <ColumnDefinition x:Name="Hour" Width="100"/>
                        <ColumnDefinition x:Name="Monday"/>
                        <ColumnDefinition x:Name="Tuesday"/>
                        <ColumnDefinition x:Name="Wednesday"/>
                        <ColumnDefinition x:Name="Thursday"/>
                        <ColumnDefinition x:Name="Friday"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition x:Name="Header"/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                </Grid>
            </VerticalStackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>